<h1>Lists#show</h1>
<h3>User: <%= @user.first_name %> </h3>
<h3><%= @list.title %> </h3>
<% if @items.any? %>
	<%  @items.each do |item| %>
	<p> <%= link_to item.title, item_path(item) %> </p>
	<p> <%= item.description  if item.description%> </p>
	<p> <%= raw item.tag_list.map {|i| link_to i, tag_path(i)}.join(" | ") %></p>
	<% end %>
<% else %>
<p>no items</p>

<% end %>
<p><%= link_to 'new item', new_item_path %> </p>
	
